@model PagingWithEntityFramework.Models.ErrorModel
@using PagingWithEntityFramework.Helpers

@{
    ViewBag.Title = "Errors list";
}

<p>
    <!-- example: Current page : 1 / 21 -->
    Current page : @Model.CurrentPage / @Model.TotalPages
</p>

<table>
    <thead>
        <tr>
            <td width="100">Id</td>            
            <td width="200">Date</td>
            <td width="150">Severity</td>            
            <td width="500">Message</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var error in Model.Errors)
        {
            <tr>
                <td>@error.Id</td>
                <td>@error.CurrentDate</td>
                <td>@error.Level</td>
                <td>@error.Stacktrace</td>
            </tr>
        }
    </tbody>
</table>

<p>
    <!-- display the navigation bar here -->
    @Html.DrawNavBar(Model.CurrentPage, Model.TotalPages)
</p>
